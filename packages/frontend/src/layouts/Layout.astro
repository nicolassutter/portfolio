---
export interface Props {
  meta: {
    description: string
    image: string
    url: string
    title: string
  }
}

const { meta } = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.svg'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />

    <title>{meta.title}</title>

    <meta
      name='description'
      content={meta.description}
    />
    <meta
      name='og:description'
      content={meta.description}
    />
    <meta
      name='og:image'
      content={meta.image}
    />
    <meta
      name='og:type'
      content='website'
    />
    <meta
      name='og:url'
      content={meta.url}
    />
    <meta
      name='og:title'
      content={meta.title}
    />
  </head>

  <body>
    <div
      class='min-h-[100dvh] text-zinc-100 bg-black grid grid-cols-[minmax(1rem,auto)_minmax(auto,calc(1024rem/16))_minmax(1rem,auto)] [:where(&>*)]:col-start-2 pt-12 lg:pt-30'
    >
      <slot />
    </div>
  </body>

  <style is:global>
    * {
      min-width: 0;
    }
  </style>
</html>
