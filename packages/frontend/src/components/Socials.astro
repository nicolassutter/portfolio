---
import { type profile as Profile } from '../modules/profile'

export interface Props {
  profile: typeof Profile
  class?: string
}

const { profile } = Astro.props
---

<ul class:list={['md:ml-auto flex items-center gap-2', Astro.props.class]}>
  {
    Object.entries(profile.socials).map(([title, { url, icon }]) => (
      <li>
        <a
          href={url}
          title={title}
          target='_blank'
          rel='noopener noreferer'
          class='hover:opacity-80 transition-opacity block'
        >
          <span
            class='flex'
            aria-hidden='true'
          >
            <i class={icon} />
          </span>
          <span class='sr-only'>{title}, open in a new tab</span>
        </a>
      </li>
    ))
  }
</ul>
